{
    "manifest_version": 2,
    "name": "HTML Annotator",
    "version": "1.0",
  
    "description": "Allows a user to annotate a page in the browser. Include highlighting text and adding notes.",

    "background": {
      "scripts": ["src/app/background.js"]
    },

    "browser_specific_settings": {
      "gecko": {
        "id": "@html-annotator",
        "strict_min_version": "58.0"
      }
    },

    "sidebar_action": {
      "default_icon": "src/components/icons/mainIcon.svg",
      "default_title" : "Annotater",
      "default_panel": "src/components/notes-sidebar.html",
      "open_at_install": false
    },

    "permissions": [
      "menus",
      "activeTab",
      "storage",
      "tabs"
    ],

    "commands": {
      "highlight-selection": {
        "suggested_key": {"default": "Ctrl+Alt+H"},
        "description": "Highlight the selected text in the default color"
      },
      "annotate-selection": {
        "suggested_key":{"default": "Ctrl+Alt+N"},
        "description": "Attached a note to the selected text"
      },
      "_execute_sidebar_action": {
        "suggested_key": {
          "default": "Ctrl+Alt+S"
        }
      }
    },

    "icons": {
        "64": "src/components/icons/mainIcon.svg",
        "32": "src/components/icons/mainIcon.svg"
      },

    "content_scripts": [
        {
          "matches": ["*://*/*"],
          "js": ["src/app/annotater.js"]
        }
    ]

  }
  