{
    "manifest_version": 2,
    "name": "Annotater",
    "version": "1.0",
    "default_locale": "en",
  
    "description": "Allows a user to annotate a page in the browser. Include highlighting text and adding notes.",

    "background": {
      "scripts": ["background.js"]
    },

    "sidebar_action": {
      "default_icon": "icons/star.png",
      "default_title" : "Annotater",
      "default_panel": "sidebar/notes-sidebar.html",
      "open_at_install": false
    },

    "permissions": [
      "menus",
      "activeTab",
      "storage",
      "tabs"
    ],

    "commands": {
      "highlight-selection": {
        "suggested_key": {"default": "Ctrl+Alt+H"},
        "description": "Highlight the selected text in the default color"
      },
      "annotate-selection": {
        "suggested_key":{"default": "Ctrl+Alt+N"},
        "description": "Attached a note to the selected text"
      },
      "_execute_sidebar_action": {
        "suggested_key": {
          "default": "Ctrl+Alt+S"
        }
      }
    },

    "icons": {
        "48": "icons/border-48.png"
      },

    "content_scripts": [
        {
          "matches": ["*://*/*"],
          "js": ["content_scripts/annotater.js", "sidebar/notes-sidebar.js"]
        }
    ]

  }
  